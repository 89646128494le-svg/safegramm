# Production Environment Variables для SafeGram Backend (Go)
# Скопируйте этот файл в .env и заполните реальными значениями

# Окружение
ENV=production

# Порт сервера
PORT=8080

# База данных (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/safegram?sslmode=require

# Redis
REDIS_URL=redis://host:6379/0

# JWT секрет (минимум 32 символа, используйте openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Encryption key для E2EE (32 байта в hex, используйте openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-encryption-key-in-hex-format

# CORS - разрешенные домены (через запятую)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# HTTPS сертификаты (пути к файлам)
HTTPS_KEY=/path/to/private.key
HTTPS_CERT=/path/to/certificate.crt

# Или используйте Let's Encrypt
# LETSENCRYPT_EMAIL=admin@yourdomain.com
# LETSENCRYPT_DOMAIN=yourdomain.com

# Email настройки (для отправки писем)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# VAPID ключи для push-уведомлений (используйте cmd/generate-vapid)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@yourdomain.com

# Логирование
LOG_LEVEL=info
LOG_FORMAT=json

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Максимальный размер загружаемого файла (в байтах)
MAX_UPLOAD_SIZE=10485760

# S3 или другой storage для медиа (опционально)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# Sentry для error tracking (опционально)
# SENTRY_DSN=

# Monitoring (опционально)
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090
